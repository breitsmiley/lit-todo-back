{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "sourceMap": true,
    //    "inlineSourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src"
  },
  "include": [
    "src/**/*",
    "ormconfig.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}